<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leprechaun.airport">

    <permission
        android:name="com.leprechaun.airport.provider.READ_CONTENT_PERMISSION"
        android:protectionLevel="normal" />
    <permission
        android:name="com.leprechaun.airport.provider.WRITE_CONTENT_PERMISSION"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_airplane_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_airplane_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.AdminnActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.UserActivity" />
        <activity android:name=".activities.AirlineActivity" />

        <provider
            android:name=".contentProvider.DatabaseProvider"
            android:authorities="com.leprechaun.airport.provider"
            android:exported="true"
            android:grantUriPermissions="true"
            android:readPermission="com.leprechaun.airport.provider.READ_CONTENT_PERMISSION"
            android:writePermission="com.leprechaun.airport.provider.WRITE_CONTENT_PERMISSION"></provider>
    </application>

</manifest>